{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["src/types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@ft-transcendence/api-types": ["../api-types/src"]
    }
  },
  "include": ["src/**/*", "src/types"],
}